{
	"manifest_version": 2,
	"name": "Glitch Prettier",
	"description": "Apply Prettier to the contents of a glitch editor",
	"version": "1.0.0",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"32": "icons/carp.svg"
		},
		"default_title": "Glitch Prettier"
	},	
	"content_scripts": [
		{
			"matches": [
				"https://glitch.com/edit/*"
			],
			"js": [
				"prettier.js",
				"babylon.js",
				"content_script.js"
			]
		}
	]
}